
def recursive_parse_top_level ( -- )
	next_token

	addr_of current_token "" str_eq if
		( Reached EOF, so finish )
	else
		addr_of current_token "def" str_eq if
			parse_function_declaration
		else
			addr_of current_token "data" str_eq if
				parse_data_declaration
			else
				throw_invalid_syntax_error
			end
		end

		recursive_parse_top_level
	end
end


def main
	recursive_parse_top_level
end
